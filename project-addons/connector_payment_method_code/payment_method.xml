<openerp>
    <data>

        <record id="payment_method_add_connector_code_form" model="ir.ui.view">
            <field name="name">payment.method.form</field>
            <field name="model">payment.method</field>
            <field name="inherit_id" ref="sale_payment_method.payment_method_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Default Values']" position="before">
                    <group>
                        <field name="connector_codes">
                            <tree>
                                <field name="code"/>
                                <field name="connector"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="code"/>
                                    <field name="connector"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
